# OpenAI API Key for AI-powered structured data extraction
OPENAI_API_KEY=your_openai_api_key_here

# Firebase Service Account
# Option 1: JSON string (recommended for production/cloud deployment)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id",...}
# Option 2: Path to service account JSON file (for local development)
# FIREBASE_SERVICE_ACCOUNT=/path/to/serviceAccountKey.json

# AWS RDS - Nutrition Database Connection
# PostgreSQL database hosting USDA nutrition data
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=nutrition_database
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_SSL_MODE=require

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
